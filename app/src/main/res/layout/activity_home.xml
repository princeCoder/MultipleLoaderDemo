<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.princecoder.multipleloader.Home">

    <TextView
        android:id="@+id/txtSim"
        android:text="@string/sim_card_contact"
        android:layout_width="match_parent"
        android:gravity="center_horizontal"
        android:textColor="#000000"
        android:layout_marginBottom="10dp"
        android:layout_gravity="center_horizontal"
        android:layout_alignParentTop="true"
        android:layout_height="wrap_content" />
    <ListView
        android:id="@+id/listview_sim"
        android:padding="4dp"
        android:layout_below="@+id/txtSim"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:background="@drawable/border"
        android:layout_marginBottom="10dp"
        android:layout_height="210dp"/>
    <TextView
        android:text="@string/phone_contact"
        android:gravity="center"
        android:textColor="#000000"
        android:layout_above="@+id/listview_phone"
        android:layout_marginBottom="10dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <ListView
        android:id="@+id/listview_phone"
        android:padding="4dp"
        android:layout_width="match_parent"
        android:background="@drawable/border"
        android:layout_alignParentBottom="true"
        android:layout_height="210dp"/>

</RelativeLayout>


